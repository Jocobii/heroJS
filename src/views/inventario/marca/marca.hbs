<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 au-card">
                    <!-- DATA TABLE -->
                    <h3 class="title-5 m-b-35">MARCAS</h3>
                    <div class="table-data__tool">

                        <div class="table-data__tool-right">
                            <button class="au-btn au-btn-icon au-btn--green au-btn--small" data-toggle="modal"
                                data-target="#scrollmodal">
                                <i class="zmdi zmdi-plus"></i>Agregar</button>
                            
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="tableMarcas" style="width:100%" class="table-earning">
                            <thead>
                                <tr>
                                    <th style="display: none;">
                                        <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </th>
                                    <th>FOLIO</th>
                                    <th>MARCA</th>
                                    <th>Estatus</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each marcas.marca}}
                                <tr class="tr-shadow">
                                    <td style="display: none;">
                                        <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </td>
                                    <td>{{id}}</td>
                                    <td>
                                        <span class="status--process">{{Nombre}}</span>
                                    </td>
                                    <td>
                                        {{#if status}}
                                        <span class="status--process">Activo</span>
                                        {{else}}
                                        <span class="status--process">Inactiva</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <div class="table-data-feature">
                                                <button class="item" data-toggle="tooltip" data-placement="top"
                                                    title="Send">
                                                    <i class="zmdi zmdi-mail-send"></i>
                                                </button>
                                            
                                            <form action="/marca/editarmarca/{{id}}">
                                                <button type="submit" class="item" data-toggle="tooltip"
                                                    data-placement="top" title="Edit">
                                                    <i class="zmdi zmdi-edit"></i>

                                                </button>
                                            </form>
                                            <form action="/marca/eliminarmarca/{{id}}">
                                                <button class="item" data-toggle="tooltip" data-placement="top"
                                                    title="Delete">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- modal scroll -->
<div class="modal fade" id="scrollmodal" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>G-Global</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="card">
                    <div class="card-header">
                        <strong>Agregar</strong>
                        <small>Marca</small>
                    </div>
                    <form action="marca/guardarmarca" class="card-body card-block" method="POST">
                        <div class="form-group">
                            <label for="nombremarca" class="control-label mb-1">Nombre</label>
                            <input id="nombremarca" name="nombremarca" type="text" class="form-control"
                                aria-required="true" aria-invalid="false">
                        </div>
                        
                    
                        <div>
                            <button id="stockBtn" type="submit" class="btn btn-lg btn-success btn-block">
                                <span>Guardar</span>
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
