<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            {{#each colaborador}}
            <div class="au-card">
                <form action="/colaborador/actualizarcolaborador" class="" method="POST"></form>
                <h3 class="title-2">Editar Colaborador</h3>
                <hr>
                <div class="card-body">
                    <div class="mx-auto d-block">
                        <h3 class="text-sm-center mt-2 mb-1">{{nombre}} {{apellidoPaterno}}</h3>
                        <div class="location text-sm-center">
                            <i class="fa fa-map-marker"></i> {{sede.Nombre}}
                        </div>
                    </div>
                </div>
                <div class="card-title">
                    <h3 class="text-center title-2">Datos Personales</h3>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card-body">
                            <div class="form-group has-success">
                                <label for="name" class="control-label mb-1">Nombres</label>
                                <input id="name" name="nombre" type="text" class="form-control" value="{{nombre}}">
                                <span class="help-block field-validation-valid" data-valmsg-for="cc-name"
                                    data-valmsg-replace="true"></span>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="paterno" class="control-label mb-1">Paterno</label>
                                        <input id="paterno" name="paterno" type="tel" class="form-control cc-exp"
                                            value="{{apellidoPaterno}}" data-val="true">
                                        <span class="help-block" data-valmsg-for="cc-exp"
                                            data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label for="materno" class="control-label mb-1">Materno</label>
                                    <div class="input-group">
                                        <input id="materno" name="materno" type="tel" class="form-control cc-cvc"
                                            data-val="true" value="{{apellidoMaterno}}">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label for="cc-name" class="control-label mb-1">Fecha De Nacimiento</label>
                                <input id="fecha" name="fecha" type="text" class="form-control" value="{{fecha}}">
                                <span class="help-block field-validation-valid" data-valmsg-for="cc-name"
                                    data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group has-success">
                                <label for="cc-name" class="control-label mb-1">Correo Electronico</label>
                                <input id="email" name="email" type="email" class="form-control" value="{{email}}">
                                <span class="help-block field-validation-valid" data-valmsg-for="cc-name"
                                    data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="numServidor" class="control-label mb-1"># Servidor</label>
                                        <input id="numservidor" name="numservidor" type="tel" class="form-control "
                                            value="{{numeroServidor}}">
                                        <span class="help-block" data-valmsg-for="cc-exp"
                                            data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="sede" class="control-label mb-1">Sede</label>
                                        <select name="sede" id="sede" class="form-control">
                                            <optgroup label="Sede Actual">
                                                <option selected="selected">{{sede.Nombre}}</option>
                                                {{/each}}
                                            </optgroup>
                                            <optgroup label="Sedes Disponibles">
                                                {{#each sedes.sedes}}
                                                <option>{{Nombre}}</option>
                                                {{/each}}
                                            </optgroup>
                                            {{#each colaborador}}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label for="puesto" class="control-label mb-1">Equipo</label>
                                    <select name="equipo" id="equipo" class="form-control">
                                        <optgroup label="Equipo Actual">
                                            <option selected="selected">{{equipo.equipo}}</option>
                                            {{/each}}
                                        </optgroup>
                                        <optgroup label="Equipo Disponibles">
                                            {{#each equipos.equipos}}
                                            <option>{{equipo}}</option>
                                            {{/each}}
                                        </optgroup>
                                        {{#each colaborador}}
                                    </select>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="sede" class="control-label mb-1">Area</label>
                                        <select name="equipo" id="equipo" class="form-control" disabled>
                                            <optgroup label="Area Actual">
                                                <option selected="selected">{{equipo.equipo}}</option>
                                                {{/each}}
                                            </optgroup>
                                            {{#each colaborador}}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="comodato" class="control-label mb-1">Link Comodato</label>
                                <input id="comodato" name="comodato" type="text" class="form-control"
                                    value="{{comodato}}">
                            </div>
                            <div class="form-group">
                                <label for="puesto" class="control-label mb-1">Puesto</label>
                                <select name="puesto" id="puesto" class="form-control">
                                    <optgroup label="Puesto Actual">
                                        <option selected="selected">{{tipoColaborador.puesto}}</option>
                                        {{/each}}
                                    </optgroup>
                                    <optgroup label="Puestos Disponibles">
                                        {{#each puestos.puestos}}
                                        <option>{{puesto}}</option>
                                        {{/each}}
                                    </optgroup>

                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                </form>
                <div class="m-2 row justify-content-center">
                    <!--<a href="/colaborador/" class="btn btn-danger col-auto btn-lg m-1">Cancelar</a>-->
                    <a href="/colaborador/actualizarcolaborador" class="btn btn-success col-auto btn-lg m-1">Actualizar
                        Datos</a>
                </div>
                <hr>
                <div class="card-title">
                    <h3 class="text-center title-2">Datos Laborales</h3>
                </div>
                <div class="row">
                    <!--se cierra el card-->
                    <div class="col-6">
                        <div class="card-title">
                            <h3 class="text-center title-2">Dispositivos</h3>
                        </div>
                    </div>
                    <!-- DIV TABLA USUARIOS-->
                    <div class="col-lg-6">
                        <div class="card-body">
                            <div class="card-title">
                                <h3 class="text-center title-2">Accesos</h3>
                            </div>
                            <hr>
                            <!-- TABLA USUARIOS -->
                            <div class="table-responsive table-data">
                                <div class="table-data__tool-right">
                                    <div class="au-btn au-btn-icon au-btn--green au-btn--small btn-sm"
                                        data-toggle="modal" data-target="#scrollmodal">
                                        <i class="zmdi zmdi-plus"></i> Agregar
                                    </div>
                                </div>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <td>Nombre</td>
                                            <td>Plataforma</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each colaborador}}
                                            {{#each Usuarios}}
                                        <tr>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6>{{usuario}}</h6>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="role admin">{{tipoUsuario.plataforma}}</span>
                                            </td>
                                        </tr>
                                            {{/each}}
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- TERMINA DIV USUARIOS-->
                </div>
            </div>
        </div>
    </div>
</div>
<!--cierra main-container-->

{{#each colaborador}}
<div class="modal fade" id="scrollmodal" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>G-Global</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div class="modal-body">

                <div class="card">
                    <div class="card-header">
                        <strong>Agregar Usuario</strong>

                    </div>
                    <form action="guardarusuario" class="card-body card-block" method="POST">
                        
                        <div class="input-group" style="display: none;">
                            <select name="colaborador" id="colaborador" class="form-control">
                                <option value="{{id}}">{{id}}</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="nombreusuario" class="form-control-label">Usuario</label>
                            <input type="text" id="nombreusuario" name="nombreusuario" placeholder="Ingresa Nombre"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-control-label">Contraseña</label>
                            <input type="password" id="password" name="password" placeholder="Ingresa Nombre"
                                class="form-control">
                        </div>
                        {{/each}}
                        <!--Cierra Colaborador-->
                        <div class="form-group">
                            <label for="tipo" class=" form-control-label">Plataforma</label>
                            <select name="tipo" id="tipo" class="form-control">
                                {{#each usuarios.tipoUsuario}}
                                <option value="{{id}}">{{plataforma}}</option>
                                {{/each}}
                            </select>
                        </div>


                        <button id="save-button" type="submit" class="btn btn-success   btn-block">
                            <i class="fa fa-save fa-lg"></i>&nbsp;
                            <span id="payment-button-amount">Guardar</span>
                            <span id="payment-button-sending" style="display:none;">Sending…</span>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

    <div class="col-md-12">
        <div class="copyright">
            <p>Copyright © 2021 G-Global. All rights reserved.</p>
        </div>
    </div>

</div> <!-- Se cierra el  Page Container Del Menu->